:set number
:syntax on
:set encoding=utf-8

"Code initial templates

:autocmd BufNewFile *.cpp 0r ~/.vim/templates/template.cpp
:autocmd BufNewFile *.c 0r ~/.vim/templates/template.c
:autocmd BufNewFile *.py 0r ~/.vim/templates/template.py
:autocmd BufNewFile *.f90 0r ~/.vim/templates/template.f90
:autocmd BufNewFile *.hmtl 0r ~/.vim/templates/template.html

:set background=dark
